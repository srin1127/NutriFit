<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nutrifit">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nutrifit"
        tools:targetApi="31">

        <!-- Splash screen entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Nutrifit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth screens -->
        <activity android:name=".LoginActivity" android:exported="true" />
        <activity android:name=".RegisterActivity" android:exported="true" />

        <!-- Home -->
        <activity android:name=".HomeActivity" android:exported="true" />

        <!-- Screens under com.example.nutrifit.screens -->
        <activity android:name=".screens.EditProfileActivity" android:exported="true" />
        <activity android:name=".screens.MealBreakdownActivity" android:exported="true" />
        <activity android:name=".screens.NutritionTipsActivity" android:exported="true" />
        <activity android:name=".screens.PrivacyPolicyActivity" android:exported="true" />
        <activity android:name=".screens.ProgressTrackerActivity" android:exported="true" />
        <activity android:name=".screens.WorkoutPlannerActivity" android:exported="true" />

    </application>

</manifest>
